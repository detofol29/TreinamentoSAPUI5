<mvc:View
    controllerName="ui5.walkthrough.controller.FilmeList"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">
    <Table
        id="filmeList"
        headerText="{i18n>filmeListTitle}"
        class="sapUiResponsiveMargin"
        width="auto"
        items="{
            path: 'filme>/Filmes',
            sorter : {
                path: 'Genero',
                group : false
            }
        }">
        <headerToolbar>
            <Toolbar>
                <Title text="{i18n>filmeListTitle}"/>
                <ToolbarSpacer/>
                <SearchField
                    width="50%"
                    search=".onFilterFilmes"
                    liveChange=".onFilterFilmes"/>
            </Toolbar>
        </headerToolbar>
        <columns>
			<Column>
				<Text text="{i18n>columnName}" />
			</Column>
			<Column
				minScreenWidth="Small"
				demandPopin="true">
				<Text text="{i18n>columnGenero}" />
			</Column>
			<Column hAlign="End">
				<Text text="{i18n>columnNota}" />
			</Column>
		</columns>
		<items>
			<ColumnListItem
				type="Navigation"
				press=".onPress">
				<cells>
					<ObjectIdentifier title="{filme>Nome}" />
					<Text
						text="{
								parts: [
									'filme>Status',
									'i18n>filmeGeneroA',
									'i18n>filmeGeneroR',
									'i18n>filmeGeneroF'
								],
								formatter: '.formatter.statusText'
							}"/>
					<Text text="{filme>Nome}" />

					<ObjectIdentifier title="{filme>Genero}" />
					<Text
						text="{
								parts: [
									'filme>Genero',
									'i18n>filmeGeneroA',
									'i18n>filmeGeneroF',
									'i18n>filmeGeneroR'
								],
								formatter: '.formatter.statusText'
							}"/>
					<Text text="{filme>Genero}" />
					<ObjectNumber
						number="{
								parts: [
									'filme>Nota',
									'view>/currency'
								],
								type: 'sap.ui.model.type.Currency',
								formatOptions: {
									showMeasure: false
								}
							}"
						unit="{view>/currency}"
						state="{= ${filme>Nota} > 50 ? 'Success' : 'Error' }"/>
				</cells>
			</ColumnListItem>
		</items>
    </Table>
</mvc:View>