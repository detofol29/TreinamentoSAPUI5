<mvc:View
    controllerName="ui5.walkthrough.controller.FilmeList"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">
    <List
        headerText="{i18n>filmeListTitle}"
        class="sapUiResponsiveMargin"
        width="auto"
        items="{filme>/Filmes}">
        <items>
            <ObjectListItem
                title="Nome: {filme>Nome}"
                number="{
                    parts: [
                        'filme>Nota',
                        'view>/currency'
                    ],
                    type: 'sap.ui.model.type.Currency',
                    formatOptions: {
                        showMeasure: false
                    }
                }"
                numberUnit="{view>/currency}"
                numberState="{= ${filme>Nota} > 50 ? 'Success' : 'Error' }">
                <firstStatus>
                    <ObjectStatus
                        text="{
                            path: 'filme>Genero',
                            formatter: '.formatter.statusText'
                        }"/>
                </firstStatus>
            </ObjectListItem>
        </items>
    </List>
</mvc:View>