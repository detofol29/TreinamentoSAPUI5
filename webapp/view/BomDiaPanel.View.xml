<mvc:View
    controllerName="ui5.walkthrough.controller.BomDiaPanel"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">
    <Panel
        headerText="{i18n>helloPanelTitle}"
        class="sapUiResponsiveMargin"
        width="auto">
        <content>
            <Button
                id="boaNoiteDialogButton"
                icon="sap-icon://world"
                text="{i18n>openDialogButtonText}"
                press=".onOpenDialog"
                class="sapUiSmallMarginEnd"/>
            <Button
                text="{i18n>MostrarBomDia}"
                press=".onShowHello"
                class="myCustomButton sapUiSmallMarginEnd"/>
            <Input
                value="{/recipient/name}"
                description="OlÃ¡ {/recipient/name}"
                valueLiveUpdate="true"
                width="40%"/>
            <FormattedText
                htmlText="Boa noite {/recipient/name}"
                class="sapUiSmallMargin sapThemeHighlight-asColor myCustomText"/>
        </content>
    </Panel>
</mvc:View>